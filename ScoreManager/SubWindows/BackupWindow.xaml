<Window x:Class="ScoreManager.SubWindows.BackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoreManager.SubWindows"
        mc:Ignorable="d"
        Title="Backup &amp; Restore Data" Height="450" Width="574" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnCreateBackup" Content="CREATE BACKUP" Style="{StaticResource btnGreen}" HorizontalAlignment="Left" Margin="380,42,0,0" VerticalAlignment="Top" Width="157" Height="49" Click="BtnCreateBackup_Click"/>
        <TextBlock HorizontalAlignment="Left" Style="{StaticResource txtHeader2}" Margin="10,10,0,0" TextWrapping="Wrap" Text="BACKUPS" VerticalAlignment="Top" Width="365"/>
        <Button x:Name="btnDelete" Content="DELETE BACKUP" Style="{StaticResource btnRed}" HorizontalAlignment="Left" Margin="380,96,0,0" VerticalAlignment="Top" Width="157" Height="49" Click="BtnDelete_Click"/>
        <Button x:Name="btnRestore" Content="RESTORE DATA" Style="{StaticResource btnBlue}" HorizontalAlignment="Left" Margin="380,150,0,0" VerticalAlignment="Top" Width="157" Height="49" Click="BtnRestore_Click"/>
        <ListBox x:Name="lbBackups" HorizontalAlignment="Left" Margin="10,47,0,10" Width="365"/>

    </Grid>
</Window>
